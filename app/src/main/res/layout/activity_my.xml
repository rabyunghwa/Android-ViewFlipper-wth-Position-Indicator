<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <com.byunghwa.demo.viewflipperwithindicator.ViewFlipperIndicator
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/viewFlipper"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_flipper_text1"
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/textView1"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_flipper_text2"
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_flipper_text3"
            android:gravity="center"
            android:textSize="25sp"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_flipper_text4"
            android:id="@+id/textView4"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1" />

    </com.byunghwa.demo.viewflipperwithindicator.ViewFlipperIndicator>


</RelativeLayout>
